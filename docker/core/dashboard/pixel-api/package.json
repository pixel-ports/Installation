{
  "name": "api",
  "version": "1.2.1",
  "description": "API for Pixel Dashboard",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && babel src -d dist --source-maps",
    "start": "nodemon --inspect src/index.js --config  nodemon.json --exec babel-node",
    "serve": "npm run clean && npm run build && cross-env NODE_ENV=production node --inspect=0.0.0.0 dist/index.js",
    "clean": "rimraf dist logs",
    "lint": "eslint 'src/**/*.js' --fix",
    "format": "prettier-eslint 'src/**/*.{js,json}' --write",
    "docker-build": "npm run clean && npm run build && docker build -t pixel-api .",
    "docker-up-dev": "npm run clean && npm run build && docker-compose up -d",
    "init": "mongorestore -h dashboard-api-db -p 27017 seed --drop"
  },
  "keywords": [],
  "author": "Jmartinez - ProDevelop S.L",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "nodemon": "^2.0.1",
    "prettier": "^1.18.2",
    "prettier-eslint-cli": "^5.0.0",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "axios-cache-adapter": "^2.5.0",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "mongoose": "^5.7.12",
    "winston": "^3.2.1",
    "yaml": "^1.10.0"
  }
}
